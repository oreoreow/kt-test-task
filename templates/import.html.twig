{% extends "base.html.twig" %}

{% block content %}
    <div class="containter mt-4">

        <div class="row justify-content-center">
            <div class="col-lg-9 col-12 card mb-4">
                <div class="card-body p-0 pt-2">
                    {{ form_start(form) }}

                    {{ form_row(form.xml_file) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        {% if importedProductsReport is defined %}
        <div class="row justify-content-center">
            <div class="col-lg-9 col-12 card">
                <div class="card-body">
                    <p class="m-0">Imported {{ importedProductsReport.savedCount }}/{{ importedProductsReport.requestedCount}} {{ importedProductsReport.savedCount == 1 ? 'product' : 'products'}}</p>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}